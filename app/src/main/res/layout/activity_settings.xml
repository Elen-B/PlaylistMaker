<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btSettingsBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/white"
            android:colorControlHighlight="@color/black_100"
            android:contentDescription="@string/button_back"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:text="@string/button_tune"
            android:textColor="@color/black_100"
            android:textSize="@dimen/primary_text_size" />
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_height"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/ys_display"
        android:paddingStart="@dimen/layout_padding"
        android:paddingEnd="12dp"
        android:text="@string/tune_night_theme"
        android:textColor="@color/black_100"
        android:textSize="@dimen/regular_text_size"
        app:trackTint="@color/grey_100"
        tools:ignore="TextContrastCheck"
        android:foreground="?attr/selectableItemBackground"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_height"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:letterSpacing="0"
        android:text="@string/tune_share_app"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black_100"
        android:textSize="@dimen/regular_text_size"
        app:icon="@drawable/ic_share"
        app:iconGravity="end"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/grey_200"
        android:stateListAnimator="@null"
        android:foreground="?attr/selectableItemBackground"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_height"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:letterSpacing="0"
        android:text="@string/tune_service"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black_100"
        android:textSize="@dimen/regular_text_size"
        app:icon="@drawable/ic_support"
        app:iconGravity="end"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/grey_200"
        android:stateListAnimator="@null"
        android:foreground="?attr/selectableItemBackground"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_height"
        android:backgroundTint="@color/white"
        android:fadingEdge="none"
        android:fontFamily="@font/ys_display"
        android:letterSpacing="0"
        android:text="@string/tune_terms_of_use"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black_100"
        android:textSize="@dimen/regular_text_size"
        app:icon="@drawable/ic_arrow_forward"
        app:iconGravity="end"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/grey_200"
        android:stateListAnimator="@null"
        android:foreground="?attr/selectableItemBackground"/>
</LinearLayout>